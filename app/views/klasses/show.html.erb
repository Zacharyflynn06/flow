<%= render partial: 'application/errors', locals: {object: @klass} %>

<h1>Class Show Page</h1>

<div>
    <h3><%= @klass.name %> - Level <%= @klass.level %> </h3>
    <p><%= @klass.description %></p>
    <ul>
        <li><%= @klass.duration %> minutes </li>
        <li><%= @klass.day %></li>
        <li><%= @klass.time %></li>
        <li><%= @klass.price %></li>

    </ul>
</div>

<%= link_to 'Edit', edit_class_path %>