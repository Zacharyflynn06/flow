<div class="wrapper">
<h1>Community</h1>

    <div class= "contents">
        <h3>Meet our Teachers:</h3>
        <% @users.teacher.each do |user| %>
    
            <h3> <%= link_to user.full_name, user_path(user) %> </h3>
                 <% if user.avatar.attached? %>
                     <%= image_tag user.avatar, class:"profile-pic" %>
                 <% else %>
                     <p>(Image not yet set up)</p>
                 <% end %>
                 Years Teaching: <%= user.years_experience %>
                 <%= user.bio %>

        <% end %>
    </div>

    <h3>Students:</h3>
    <% @users.student.each do |user| %>

        <div class="contents">
           <h3> <%= link_to user.full_name, user_path(user) %> </h3>
           <%= user.bio %>
        </div>

    <% end %>

</div>
