<h1 class="heading">Community</h1>

<div class="wrapper">

    <h2>Meet our Teachers</h2>
    <% @users.teacher.each do |user| %>

        <div class="contents">
           <h3> <%= link_to user.full_name, user_path(user) %> </h3>
           <ul>
                <li><%= user.bio %></li>
                <li>Years Teaching: <%= user.years_experience %></li>
           </ul>
        </div>
    <% end %>

    <h2>Students:</h2>
    <% @users.student.each do |user| %>

        <div class="contents">
           <h3> <%= link_to user.full_name, user_path(user) %> </h3>
           <%= user.bio %>
        </div>

    <% end %>

</div>
