<div class="wrapper">

    <h1 class="wrapper-content">Users Index</h1>


    <h2>Teachers:</h2>
    <% @users.teacher.each do |user| %>

        <div>
           <h4> <%= link_to user.full_name, user_path(user) %> </h4>
           <ul>
                <li><%= user.bio %></li>
                <li>Years Teaching: <%= user.years_experience %></li>
           </ul>
        </div>
    <% end %>

    <h2>Students:</h2>
    <% @users.student.each do |user| %>

        <div>
           <h4> <%= link_to user.full_name, user_path(user) %> </h4>
           <p><%= user.bio %> </p>
        </div>

    <% end %>

</div>
