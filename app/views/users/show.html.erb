
<h2><%= @user.first_name%> <%= @user.last_name %>'s Homepage</h2>

<p>Bio: <%= @user.bio %></p>


<% byebug %>

<% if @user.teacher? %>
    <h3>Years Experience: <%= @user.years_experience %> </h3>
    <ul>
        <% @user.given_klasses.each do |k| %>
            <li><% k.name %></li>
            <li><% k.date %></li>
            <li><% k.time %></li>
            <li><% k.price %></li>
        <% end %>
    </ul>
<% end %>