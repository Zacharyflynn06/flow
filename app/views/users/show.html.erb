
<h1><%= @user.first_name%> <%= @user.last_name %>'s Homepage</h1>


    <div class="wrapper">
        <div class="contents">
                <h3>About Me</h3>
        <p><%= @user.bio %></p><br>

        <% if @user.teacher? %>
            <p>Years Experience: <%= @user.years_experience %> </p><br>
    </div>
    <div class="contents" >
            <h3><%= link_to 'Courses I Teach', user_courses_path(@user.id) %></h3>
            <ul class="contents">
                <% @user.given_courses.each do |course| %>

                    <li><%= link_to course.name, course_path(course.id) %></li>
                    <li>Day: <%= course.day%></li>
                    <li>Time: <%= course.time %></li>
                    <li>Price: <%= course.price %></li>

                <% end %>
            </ul>
        <% end %>
    </div>

</div>


<% if session[:user_id] == params[:id].to_i %>
  <div class="button"><%= link_to 'Edit User', edit_user_path(@user) %></div>
<% end %>



   


