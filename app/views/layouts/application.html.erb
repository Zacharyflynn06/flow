<!DOCTYPE html>
<html>
  <head>
    <title>Flow</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'reset-styles', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <ul class="nav-bar">
      <li class="nav-bar"> <%= link_to 'Home', root_path %> </li>
      <li class="nav-bar"> <%= link_to 'Courses', courses_path %> </li>
      <li class="nav-bar"> <%= link_to 'Community', users_path %> </li>
    <% if !logged_in? %>
      <li class="nav-bar-float-right"> <%= link_to 'Login', login_path %> </li>
      <li class="nav-bar-float-right"> <%= link_to 'Sign Up', new_user_path %></li>
    <% else %>
      <li class="nav-bar-float-right"> <%= link_to "Logout", logout_path, method: "post" %>
    <% end %>
  </ul>

  <body>
    <div class="errors">
      <% flash.each do |k,v| %>
          <%= v %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
